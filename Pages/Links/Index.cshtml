@page
@model LinkShareApp.Pages.Links.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>List Of All URLS</h1>
<a asp-page="Create" class="btn m-3 btn-primary">Add Url</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Link[0].UrlName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link[0].Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Link[0].PricePerHour)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Link) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UrlName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Url)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PricePerHour)
            </td>
            <td>
                <a asp-page="./Edit" class=" btn-outline-info " asp-route-id="@item.ID">Edit</a> 
                <a asp-page="./Details" class="btn-outline-dark " asp-route-id="@item.ID">Details</a> 
                <a asp-page="./Delete" class=" btn-outline-danger " asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
