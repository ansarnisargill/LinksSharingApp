@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>List Of Available URLs</h1>
        <div class="list-group mt-4">
            @{ foreach (var item in Model.ListOfLinks)
                {
                    <a href="/Verify/@item.ID" class="list-group-item list-group-item-action bg-dark text-light flex-column align-items-start">
                        <div class="d-flex w-100 ">
                            <h5 class="mb-1">@item.UrlName</h5>
                        </div>
                        <p class="mb-1">@item.Description</p>
                    </a>
                }

            }
        </div>



        
