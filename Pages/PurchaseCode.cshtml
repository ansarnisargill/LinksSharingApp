@page "{Linkid}"
@model LinkShareApp.Pages.PurchaseCodeModel
@{
ViewData["Title"] = "PurchaseCode";
Layout = "~/Pages/Shared/_Layout.cshtml";
}

@{ var item = Model.Link;

<div class="card col-4 offset-4 bg-white">
    <div class="card-body">
        <h5 class="card-title">@item.UrlName</h5>
        <p class="card-text">@item.Description <br /> Per Hour Price:@item.PricePerHour.ToString("C")</p>
        <div class="form-group">
            <label for="code" class="control-label">Valid Till</label>
            <input type="datetime-local" id="date" name="date" class="form-control" />
            <input type="hidden" id="id" name="id" value="@item.ID" />
        </div>
        <!-- Example split danger button -->
        <div class="btn-group">
            <button type="button" class="btn btn-outline-success">Checkout</button>
            <button type="button" class="btn btn-outline-success dropdown-toggle dropdown-toggle-split" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
                <span class="sr-only">Toggle Dropdown</span>
            </button>
            <div class="dropdown-menu">
                <a class="dropdown-item disabled btn btn-outline-dark" href="#">Via PayPal</a>
                <a class="dropdown-item btn btn-outline-dark" href="#" onclick="GetDate()">Via Cash</a>
            </div>
        </div>

    </div>


</div>


}