@model LinkShareApp.Pages.Links.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h3>Are you sure you want to delete this Link?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Link.Url)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Link.Url)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Link.Description)
        </dt>
